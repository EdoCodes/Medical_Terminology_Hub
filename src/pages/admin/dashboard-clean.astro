    font-size: 14px;
    color: #6b7280;
    margin-top: 4px;
  }

  /* Actions Section */
  .actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 24px;
  }

