---
import Layout from '../../layouts/Layout.astro';
import medicalTerms from '../../data/medicalTerms.json';
import blogPosts from '../../data/blogPosts.json';

// Count total terms across all categories
let totalTerms = 0;
Object.keys(medicalTerms).forEach((category) => {
  totalTerms += medicalTerms[category as keyof typeof medicalTerms].length;
});

const totalPosts = blogPosts.posts.length;
const categories = Object.keys(medicalTerms).length;
---

<Layout title="Admin Dashboard - Medical Terminology Hub">
  <div class="admin-dashboard">
    <!-- Header -->
    <header class="admin-header">
      <div class="header-content">
        <div class="header-left">
          <h1 class="admin-title">Admin Dashboard</h1>
          <p class="admin-subtitle">Content Management System</p>
        </div>
        <div class="header-right">
          <div class="user-info">
            <div class="user-avatar">A</div>
            <span class="user-name">Administrator</span>
          </div>
          <button id="logoutBtn" class="logout-btn">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
              <polyline points="16,17 21,12 16,7"/>
              <line x1="21" y1="12" x2="9" y2="12"/>
            </svg>
            Logout
          </button>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="admin-main">
      <div class="admin-container">
        <!-- Stats Overview -->
        <section class="stats-section">
          <div class="stats-grid">
            <div class="stat-card">
              <div class="stat-icon medical">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path d="M14,2H6A2,2,0,0,0,4,4V20a2,2,0,0,0,2,2H18a2,2,0,0,0,2-2V8Z"/>
                  <polyline points="14,2 14,8 20,8"/>
                  <line x1="16" y1="13" x2="8" y2="13"/>
                  <line x1="16" y1="17" x2="8" y2="17"/>
                </svg>
              </div>
              <div class="stat-content">
                <div class="stat-number">{totalTerms}</div>
                <div class="stat-label">Medical Terms</div>
              </div>
            </div>

            <div class="stat-card">
              <div class="stat-icon blog">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
              </div>
              <div class="stat-content">
                <div class="stat-number">{totalPosts}</div>
                <div class="stat-label">Blog Posts</div>
              </div>
            </div>

            <div class="stat-card">
              <div class="stat-icon categories">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <rect x="3" y="3" width="7" height="7"/>
                  <rect x="14" y="3" width="7" height="7"/>
                  <rect x="14" y="14" width="7" height="7"/>
                  <rect x="3" y="14" width="7" height="7"/>
                </svg>
              </div>
              <div class="stat-content">
                <div class="stat-number">{categories}</div>
                <div class="stat-label">Categories</div>
              </div>
            </div>

            <div class="stat-card">
              <div class="stat-icon status">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12,6 12,12 16,14"/>
                </svg>
              </div>
              <div class="stat-content">
                <div class="stat-number status-active">Active</div>
                <div class="stat-label">System Status</div>
              </div>
            </div>
          </div>
        </section>

        <!-- Action Panels -->
        <section class="actions-section">
          <div class="actions-grid">
            <!-- Medical Terms Management -->
            <div class="action-panel">
              <div class="panel-header">
                <div class="panel-icon medical">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M14,2H6A2,2,0,0,0,4,4V20a2,2,0,0,0,2,2H18a2,2,0,0,0,2-2V8Z"/>
                    <polyline points="14,2 14,8 20,8"/>
                  </svg>
                </div>
                <div class="panel-title">Medical Terms</div>
              </div>
              <div class="panel-content">
                <p class="panel-description">Manage your medical terminology database</p>
                <div class="panel-actions">
                  <button class="action-btn primary" onclick="openModal('add-term-modal')">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <line x1="12" y1="5" x2="12" y2="19"/>
                      <line x1="5" y1="12" x2="19" y2="12"/>
                    </svg>
                    Add New Term
                  </button>
                  <button class="action-btn secondary" onclick="showTermsList()">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <path d="M3 6h18M3 12h18M3 18h18"/>
                    </svg>
                    View All Terms
                  </button>
                  <button class="action-btn secondary" onclick="exportTerms()">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                      <polyline points="7,10 12,15 17,10"/>
                      <line x1="12" y1="15" x2="12" y2="3"/>
                    </svg>
                    Export Data
                  </button>
                </div>
              </div>
            </div>

            <!-- Blog Management -->
            <div class="action-panel">
              <div class="panel-header">
                <div class="panel-icon blog">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M12 6.253v13"/>
                  </svg>
                </div>
                <div class="panel-title">Blog Management</div>
              </div>
              <div class="panel-content">
                <p class="panel-description">Create and manage blog posts</p>
                <div class="panel-actions">
                  <button class="action-btn primary" onclick="openModal('add-blog-modal')">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <line x1="12" y1="5" x2="12" y2="19"/>
                      <line x1="5" y1="12" x2="19" y2="12"/>
                    </svg>
                    New Blog Post
                  </button>
                  <button class="action-btn secondary" onclick="showBlogList()">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <path d="M3 6h18M3 12h18M3 18h18"/>
                    </svg>
                    Manage Posts
                  </button>
                  <button class="action-btn secondary" onclick="exportBlogData()">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                      <polyline points="7,10 12,15 17,10"/>
                      <line x1="12" y1="15" x2="12" y2="3"/>
                    </svg>
                    Export Posts
                  </button>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Content Display -->
        <section class="content-section">
          <div class="content-panel">
            <div class="content-header">
              <h2 class="content-title">Content Management</h2>
            </div>
            <div class="content-area" id="contentArea">
              <div class="empty-state">
                <div class="empty-icon">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                    <line x1="16" y1="2" x2="16" y2="6"/>
                    <line x1="8" y1="2" x2="8" y2="6"/>
                    <line x1="3" y1="10" x2="21" y2="10"/>
                  </svg>
                </div>
                <h3 class="empty-title">Ready to Manage Content</h3>
                <p class="empty-description">Select an action above to start managing your medical terms or blog posts.</p>
                <a href="/" class="empty-link">View Live Site</a>
              </div>
            </div>
          </div>
        </section>
      </div>
    </main>

    <!-- Add Term Modal -->
    <div id="add-term-modal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title">Add New Medical Term</h3>
          <button class="modal-close" onclick="closeModal('add-term-modal')">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <line x1="18" y1="6" x2="6" y2="18"/>
              <line x1="6" y1="6" x2="18" y2="18"/>
            </svg>
          </button>
        </div>
        <form id="add-term-form" class="modal-form">
          <div class="form-group">
            <label class="form-label">Medical Term</label>
            <input type="text" name="term" required class="form-input" placeholder="e.g., Hypertension" />
          </div>
          <div class="form-group">
            <label class="form-label">Definition</label>
            <textarea name="definition" required rows="3" class="form-textarea" placeholder="Clear, concise definition..."></textarea>
          </div>
          <div class="form-group">
            <label class="form-label">Clinical Example</label>
            <textarea name="example" required rows="2" class="form-textarea" placeholder="Real-world usage example..."></textarea>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label class="form-label">Category</label>
              <select name="category" required class="form-select">
                <option value="">Select Category</option>
                <option value="cardiovascular">Cardiovascular</option>
                <option value="respiratory">Respiratory</option>
                <option value="neurology">Neurology</option>
                <option value="dermatology">Dermatology</option>
                <option value="musculoskeletal">Musculoskeletal</option>
                <option value="gastroenterology">Gastroenterology</option>
              </select>
            </div>
            <div class="form-group">
              <label class="form-label">Difficulty</label>
              <select name="difficulty" required class="form-select">
                <option value="">Select Difficulty</option>
                <option value="basic">Basic</option>
                <option value="intermediate">Intermediate</option>
                <option value="advanced">Advanced</option>
              </select>
            </div>
          </div>
          <div class="form-actions">
            <button type="button" onclick="closeModal('add-term-modal')" class="btn-secondary">Cancel</button>
            <button type="submit" class="btn-primary">Add Term</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Add Blog Post Modal -->
    <div id="add-blog-modal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title">Add New Blog Post</h3>
          <button class="modal-close" onclick="closeModal('add-blog-modal')">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <line x1="18" y1="6" x2="6" y2="18"/>
              <line x1="6" y1="6" x2="18" y2="18"/>
            </svg>
          </button>
        </div>
        <form id="add-blog-form" class="modal-form">
          <div class="form-group">
            <label class="form-label">Post Title</label>
            <input type="text" name="title" required class="form-input" placeholder="Enter blog post title..." />
          </div>
          <div class="form-group">
            <label class="form-label">Excerpt</label>
            <textarea name="excerpt" required rows="2" class="form-textarea" placeholder="Brief description..."></textarea>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label class="form-label">Author</label>
              <input type="text" name="author" required class="form-input" placeholder="Author name" />
            </div>
            <div class="form-group">
              <label class="form-label">Category</label>
              <select name="category" required class="form-select">
                <option value="">Select Category</option>
                <option value="Cardiovascular">Cardiovascular</option>
                <option value="Respiratory">Respiratory</option>
                <option value="Neurology">Neurology</option>
                <option value="Dermatology">Dermatology</option>
                <option value="Educational">Educational</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label">Video URL (optional)</label>
            <input type="url" name="videoUrl" class="form-input" placeholder="https://youtube.com/..." />
          </div>
          <div class="form-actions">
            <button type="button" onclick="closeModal('add-blog-modal')" class="btn-secondary">Cancel</button>
            <button type="submit" class="btn-primary">Add Post</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</Layout>

<style>
