    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 16px;
  }

  .user-name {
    font-size: 14px;
    font-weight: 500;
  }

  .logout-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 6px;
    color: white;
