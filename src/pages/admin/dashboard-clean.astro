</style>

<script>
  // Authentication check
  document.addEventListener('DOMContentLoaded', function() {
    const isLoggedIn = localStorage.getItem('adminLoggedIn');
    if (isLoggedIn !== 'true') {
      window.location.href = '/admin/login';
      return;
