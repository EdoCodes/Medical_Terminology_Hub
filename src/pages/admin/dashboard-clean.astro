  }

  .panel-header {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 20px 24px;
    border-bottom: 1px solid #f3f4f6;
  }

  .panel-icon {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .panel-icon svg {
    width: 20px;
    height: 20px;
  }

  .panel-title {
    font-size: 18px;
    font-weight: 600;
    color: #1f2937;
  }

