  @media (max-width: 768px) {
    .container {
      padding: 0 16px;
    }

    .breadcrumb {
      padding: 12px 0;
    }

    .breadcrumb ol {
      font-size: 0.8125rem;
    }

    .blog-post {
      padding: 32px 0;
    }

