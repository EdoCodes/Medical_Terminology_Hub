    color: #343a40;
    margin: 36px 0 18px 0;
    line-height: 1.4;
  }

  .post-content h4 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #495057;
    margin: 24px 0 12px 0;
    line-height: 1.4;
  }

  .post-content p {
    margin-bottom: 18px;
    font-size: 16px;
    line-height: 1.8;
    color: #333;
  }

