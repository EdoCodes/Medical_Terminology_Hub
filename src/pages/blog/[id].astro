  .post-content ol {
    margin: 18px 0;
    padding-left: 24px;
  }

  .post-content li {
    margin-bottom: 8px;
    font-size: 16px;
    line-height: 1.7;
    color: #333;
  }

  .post-content strong {
    font-weight: 600;
    color: #212529;
  }

  .post-content em {
    font-style: italic;
    color: #6c757d;
  }

  /* Clean link styling */
  .post-content a {
    color: #007bff;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .post-content a:hover {
    color: #0056b3;
    text-decoration: underline;
  }

  /* Related Resources */
