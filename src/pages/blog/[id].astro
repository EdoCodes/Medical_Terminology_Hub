    background: #e8f5e8;
    padding: 24px;
    border-radius: 12px;
    margin: 32px 0;
    border-left: 4px solid #28a745;
  }

  .learning-resources h3 {
    color: #155724;
    margin-top: 0;
  }

  /* Expert Insights */
  .expert-insights {
    margin: 40px 0;
  }

  .expert-insights blockquote {
    background: #f1f3f4;
    border-left: 4px solid #6c757d;
    padding: 20px 24px;
    margin: 20px 0;
    font-style: italic;
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .expert-insights cite {
    font-weight: 600;
    color: #495057;
    font-style: normal;
  }

  /* Takeaways Grid */
  .takeaways-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin: 24px 0;
  }

  .takeaway {
    background: #fff3cd;
    padding: 20px;
    border-radius: 8px;
    border-left: 4px solid #ffc107;
  }

  .takeaway h4 {
