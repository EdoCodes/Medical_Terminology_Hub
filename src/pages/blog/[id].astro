    font-weight: 700;
    color: #212529;
    margin-bottom: 24px;
    line-height: 1.2;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 8px;
  }

  .tag {
    background: #f8f9fa;
    color: #495057;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 500;
    border: 1px solid #e9ecef;
  }

  /* Post Image */
  .post-image {
    margin-bottom: 40px;
    border-radius: 8px;
    overflow: hidden;
    background: #f8f9fa;
  }

