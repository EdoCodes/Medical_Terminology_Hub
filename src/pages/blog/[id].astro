    margin-bottom: 32px;
    padding-bottom: 24px;
    border-bottom: 2px solid #e9ecef;
  }

  .lead-text {
    font-size: 1.25rem;
    font-weight: 400;
    color: #495057;
    line-height: 1.6;
    margin: 0;
    font-style: italic;
  }

  /* Article Meta Details */
  .article-meta-details {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 32px;
    border-left: 4px solid #007bff;
  }

  .author-info {
    font-size: 14px;
    color: #6c757d;
    margin-bottom: 12px;
