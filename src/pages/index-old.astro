---
import Layout from '../layouts/Layout.astro';
import SearchBar from '../components/SimpleSearchBar.astro';
import Flashcard from '../components/Flashcard.astro';
import ProgressTracker from '../components/SimpleProgressTracker.astro';
import CategoryList from '../components/CategoryList.astro';
import medicalTerms from '../data/medicalTerms.json';

// Use the new flat structure
const allTerms = medicalTerms.terms || [];
---

<Layout title="Medical Terminology Hub - Interactive Flashcards">
  <main class="min-h-screen">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-gray-900">Medical Terminology Hub</h1>
            <p class="text-gray-600 mt-1">Master medical terminology through interactive flashcards</p>
          </div>
          <div class="flex items-center space-x-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
              üé¥ {allTerms.length} Terms Available
            </span>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
              üè• 6 Medical Categories
            </span>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        
        <!-- Left Sidebar - Categories -->
        <div class="lg:col-span-1">
          <CategoryList />
        </div>
        
        <!-- Main Content Area - Flashcards -->
        <div class="lg:col-span-2">
          <!-- Search Bar -->
          <SearchBar />
          
          <!-- Flashcards Container -->
          <div class="space-y-6">
            <div class="text-center mb-6">
              <h2 class="text-2xl font-bold text-gray-800 mb-2">All Medical Terms</h2>
              <p class="text-gray-600">Study all {allTerms.length} medical terms across 6 categories</p>
            </div>
            
            <!-- All cards display -->
            {allTerms.map((term) => (
              <Flashcard 
                term={term.term}
                definition={term.definition}
                example={term.example}
                difficulty={term.difficulty}
                id={term.id}
              />
            ))}
          </div>
        </div>
        
        <!-- Right Sidebar - Progress Tracker -->
        <div class="lg:col-span-1">
          <ProgressTracker />
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-50 border-t border-gray-200 mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center">
          <p class="text-gray-600">
            ¬© 2024 Medical Terminology Hub. Educational use only - not medical advice.
          </p>
          <p class="text-sm text-gray-500 mt-2">
            Built with ‚ù§Ô∏è for medical students and healthcare professionals
          </p>
        </div>
      </div>
    </footer>
  </main>
</Layout>