---
import Layout from '../layouts/Layout.astro';
import SearchBar from '../components/SimpleSearchBar.astro';
import Flashcard from '../components/Flashcard.astro';
import ProgressTracker from '../components/SimpleProgressTracker.astro';
import CategoryList from '../components/CategoryList.astro';
import medicalTerms from '../data/medicalTerms.json';
import categories from '../data/categories.json';

export function getStaticPaths() {
  return Object.keys(medicalTerms).map(category => ({
    params: { category },
  }));
}

const { category } = Astro.params;
const categoryData = categories[category];
const terms = medicalTerms[category] || [];

if (!categoryData) {
  return Astro.redirect('/404');
}

const colorClasses = {
  red: 'from-red-500 to-red-600',
  blue: 'from-blue-500 to-blue-600',
  purple: 'from-purple-500 to-purple-600',
  pink: 'from-pink-500 to-pink-600',
  yellow: 'from-yellow-500 to-yellow-600',
  green: 'from-green-500 to-green-600'
};
---

<Layout title={`${categoryData.name} - Medical Terminology Hub`} description={`Study ${categoryData.description} with interactive flashcards. ${terms.length} medical terms to master.`}>
  <main class="min-h-screen">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex items-center justify-between">
          <div>
            <nav class="flex items-center space-x-2 text-sm text-gray-600 mb-2">
              <a href="/" class="hover:text-blue-600 transition-colors">Medical Terminology Hub</a>
              <span>/</span>
              <span class="text-gray-900 font-medium">{categoryData.name}</span>
            </nav>
            <h1 class="text-3xl font-bold text-gray-900 flex items-center">
              <span class="text-4xl mr-3">{categoryData.icon}</span>
              {categoryData.name}
            </h1>
            <p class="text-gray-600 mt-1">{categoryData.description}</p>
          </div>
          <div class="flex items-center space-x-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
              üé¥ {terms.length} Terms
            </span>
            <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gradient-to-r ${colorClasses[categoryData.color]} text-white`}>
              {categoryData.icon} {categoryData.name}
            </span>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        
        <!-- Left Sidebar - Categories -->
        <div class="lg:col-span-1">
          <CategoryList />
        </div>
        
        <!-- Main Content Area - Flashcards -->
        <div class="lg:col-span-2">
          <!-- Search Bar -->
          <SearchBar />
          
          <!-- Category Overview -->
          <div class={`bg-gradient-to-r ${colorClasses[categoryData.color]} rounded-xl shadow-lg text-white p-6 mb-6`}>
            <div class="flex items-center justify-between">
              <div>
                <h2 class="text-2xl font-bold mb-2">{categoryData.name}</h2>
                <p class="text-white/90 mb-4">{categoryData.description}</p>
                <div class="flex items-center space-x-4 text-sm">
                  <span class="bg-white/20 px-3 py-1 rounded-full">
                    üìö {terms.length} Terms
                  </span>
                  <span class="bg-white/20 px-3 py-1 rounded-full">
                    üéØ {terms.filter((t: any) => t.difficulty === 'basic').length} Basic
                  </span>
                  <span class="bg-white/20 px-3 py-1 rounded-full">
                    ‚ö° {terms.filter((t: any) => t.difficulty === 'intermediate').length} Intermediate
                  </span>
                  <span class="bg-white/20 px-3 py-1 rounded-full">
                    üî• {terms.filter((t: any) => t.difficulty === 'advanced').length} Advanced
                  </span>
                </div>
              </div>
              <div class="text-6xl opacity-20">
                {categoryData.icon}
              </div>
            </div>
          </div>
          
          <!-- Flashcards Container -->
          <div class="space-y-6">
            <div class="text-center mb-6">
              <h3 class="text-2xl font-bold text-gray-800 mb-2">Study {categoryData.name}</h3>
              <p class="text-gray-600">Master {terms.length} essential medical terms</p>
            </div>
            
            <!-- All cards display -->
            {terms.map((term: any) => (
              <Flashcard 
                term={term.term}
                definition={term.definition}
                example={term.example}
                difficulty={term.difficulty}
                id={term.id}
              />
            ))}
            
            {terms.length === 0 && (
              <div class="text-center py-12">
                <div class="text-6xl mb-4">üìö</div>
                <h3 class="text-xl font-semibold text-gray-700 mb-2">No terms available</h3>
                <p class="text-gray-500 mb-4">This category doesn't have any medical terms yet.</p>
                <a href="/" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors">
                  ‚Üê Back to All Categories
                </a>
              </div>
            )}
          </div>
        </div>
        
        <!-- Right Sidebar - Progress Tracker -->
        <div class="lg:col-span-1">
          <ProgressTracker />
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-50 border-t border-gray-200 mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center">
          <p class="text-gray-600">
            ¬© 2024 Medical Terminology Hub. Educational use only - not medical advice.
          </p>
          <p class="text-sm text-gray-500 mt-2">
            Built with ‚ù§Ô∏è for medical students and healthcare professionals
          </p>
        </div>
      </div>
    </footer>
  </main>
</Layout>