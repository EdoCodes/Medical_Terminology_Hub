---
import Layout from '../layouts/Layout.astro';
import CleanHeader from '../components/CleanHeader.astro';
import CleanFooter from '../components/CleanFooter.astro';
import blogPosts from '../data/blogPosts.json';

// Generate random publish dates for posts
const generateRandomDate = (index) => {
  const dates = [
    '2024-03-15', '2024-02-28', '2024-02-14', '2024-01-30', '2024-01-18',
    '2024-01-05', '2023-12-20', '2023-12-08', '2023-11-25', '2023-11-12',
    '2023-10-28', '2023-10-15', '2023-09-30', '2023-09-18', '2023-09-05'
  ];
  return dates[index % dates.length];
};

// Add random publish dates and header images to posts
const postsWithMeta = blogPosts.posts.map((post, index) => ({
  ...post,
  publishDate: generateRandomDate(index),
  headerImage: `/images/blog/header-${(index % 6) + 1}.jpg`
}));

// SEO Schema data
const schemaData = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "Medical Terminology Hub - Blog",
  "description": "Expert medical terminology articles and study guides for healthcare professionals and students",
  "url": "https://medicalterminologyhub.netlify.app/blog/",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://medicalterminologyhub.netlify.app/blog/"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Medical Terminology Hub",
    "url": "https://medicalterminologyhub.netlify.app/"
  },
  "blogPost": postsWithMeta.map(post => ({
    "@type": "BlogPosting",
    "headline": post.title,
    "description": post.excerpt,
    "datePublished": post.publishDate,
    "url": `https://medicalterminologyhub.netlify.app/blog/${post.id}`,
    "image": `https://medicalterminologyhub.netlify.app${post.headerImage}`,
    "articleSection": post.category,
    "keywords": post.tags,
    "publisher": {
      "@type": "Organization",
      "name": "Medical Terminology Hub"
    }
  }))
};
---

<Layout 
  title="Medical Terminology Blog - Expert Articles & Study Resources" 
  description="Explore comprehensive medical terminology articles, study guides, and educational resources. Learn medical language fundamentals for healthcare professionals and students."
>
  <CleanHeader />
  
  <!-- JSON-LD Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)}></script>
  
  <main class="blog-main">
    
    <!-- Simple Header -->
    <header class="blog-header">
      <div class="container">
        <h1 class="blog-title">Medical Terminology Blog</h1>
        <p class="blog-description">Expert articles and study guides for healthcare professionals</p>
      </div>
    </header>

    <!-- Blog Content -->
    <section class="blog-content">
      <div class="container">
        
        <!-- Articles Grid -->
        <div class="articles-grid">
          {postsWithMeta.map(post => (
            <article class="article-card" itemscope itemtype="https://schema.org/BlogPosting">
              
              <!-- Article Image -->
              <div class="article-image">
                <img 
                  src={post.headerImage} 
                  alt={post.title}
                  loading="lazy"
                  itemprop="image"
                  onerror="this.src='/images/blog/default.svg'"
                />
                <div class="category-badge">{post.category}</div>
              </div>
              
              <!-- Article Content -->
              <div class="article-content">
                <div class="article-meta">
                  <time class="publish-date" itemprop="datePublished" datetime={post.publishDate}>
                    {new Date(post.publishDate).toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'long', 
                      day: 'numeric' 
                    })}
                  </time>
                  <span class="read-time">{post.readTime}</span>
                </div>
                
                <h2 class="article-title" itemprop="headline">
                  <a href={`/blog/${post.id}`} itemprop="url">{post.title}</a>
                </h2>
                
                <p class="article-excerpt" itemprop="description">{post.excerpt}</p>
                
                <div class="article-tags">
                  {post.tags.slice(0, 3).map(tag => (
                    <span class="tag" itemprop="keywords">{tag}</span>
                  ))}
                </div>
              </div>
            </article>
          ))}
        </div>

        <!-- Study Resources Section -->
        <aside class="study-resources">
          <h2>Study Resources</h2>
          <div class="resources-grid">
            <a href="/" class="resource-card">
              <h3>Interactive Flashcards</h3>
              <p>Learn medical terminology with spaced repetition</p>
            </a>
            <a href="/tests/comprehensive" class="resource-card">
              <h3>Comprehensive Test</h3>
              <p>100 practice questions covering all systems</p>
            </a>
            <a href="/tests/cardiovascular" class="resource-card">
              <h3>System-Specific Tests</h3>
              <p>Focused quizzes by medical specialty</p>
            </a>
          </div>
        </aside>

      </div>
    </section>
  </main>

  <CleanFooter />
</Layout>

<style>
  /* Reset and Base Styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .blog-main {
    background: #ffffff;
    min-height: calc(100vh - 140px);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Blog Header */
  .blog-header {
    background: #f8f9fa;
    border-bottom: 1px solid #e9ecef;
    padding: 60px 0;
    text-align: center;
  }

  .blog-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #212529;
    margin-bottom: 12px;
    line-height: 1.2;
  }

  .blog-description {
    font-size: 1.125rem;
    color: #6c757d;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.5;
  }

  /* Blog Content */
  .blog-content {
    padding: 80px 0;
  }

  /* Articles Grid */
  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 40px;
    margin-bottom: 80px;
  }

  .article-card {
    background: #ffffff;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    text-decoration: none;
    color: inherit;
  }

  .article-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  /* Article Image */
  .article-image {
    position: relative;
    height: 200px;
    overflow: hidden;
    background: #f8f9fa;
  }

  .article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .article-card:hover .article-image img {
    transform: scale(1.03);
  }

  .category-badge {
    position: absolute;
    top: 16px;
    left: 16px;
    background: rgba(33, 37, 41, 0.8);
    color: white;
    padding: 6px 12px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Article Content */
  .article-content {
    padding: 24px;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 16px;
    font-size: 0.875rem;
    color: #6c757d;
  }

  .publish-date {
    font-weight: 500;
  }

  .read-time {
    color: #adb5bd;
  }

  .article-title {
    margin-bottom: 12px;
    line-height: 1.3;
  }

  .article-title a {
    color: #212529;
    text-decoration: none;
    font-size: 1.25rem;
    font-weight: 600;
    transition: color 0.2s ease;
  }

  .article-title a:hover {
    color: #0d6efd;
  }

  .article-excerpt {
    color: #495057;
    line-height: 1.5;
    margin-bottom: 16px;
    font-size: 0.9375rem;
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .tag {
    background: #f8f9fa;
    color: #495057;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 500;
    border: 1px solid #e9ecef;
  }

  /* Study Resources */
  .study-resources {
    border-top: 1px solid #e9ecef;
    padding-top: 60px;
  }

  .study-resources h2 {
    font-size: 2rem;
    font-weight: 600;
    color: #212529;
    margin-bottom: 32px;
    text-align: center;
  }

  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
  }

  .resource-card {
    background: #f8f9fa;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    padding: 32px 24px;
    text-align: center;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
  }

  .resource-card:hover {
    background: #e9ecef;
    transform: translateY(-2px);
    color: inherit;
    text-decoration: none;
  }

  .resource-card h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: #212529;
    margin-bottom: 8px;
  }

  .resource-card p {
    color: #6c757d;
    font-size: 0.9375rem;
    line-height: 1.5;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .container {
      padding: 0 16px;
    }

    .blog-header {
      padding: 40px 0;
    }

    .blog-title {
      font-size: 2rem;
    }

    .blog-description {
      font-size: 1rem;
    }

    .blog-content {
      padding: 60px 0;
    }

    .articles-grid {
      grid-template-columns: 1fr;
      gap: 32px;
      margin-bottom: 60px;
    }

    .article-content {
      padding: 20px;
    }

    .study-resources {
      padding-top: 40px;
    }

    .study-resources h2 {
      font-size: 1.5rem;
    }

    .resources-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .resource-card {
      padding: 24px 20px;
    }
  }

  @media (max-width: 480px) {
    .blog-title {
      font-size: 1.75rem;
    }

    .articles-grid {
      gap: 24px;
    }

    .article-image {
      height: 160px;
    }

    .article-content {
      padding: 16px;
    }
  }

  /* SEO Optimizations */
  .article-card {
    scroll-margin-top: 80px;
  }

  /* Clean, no gradients or decorative elements */
  .blog-main,
  .blog-main *,
  .article-card,
  .resource-card {
    background-clip: padding-box;
  }

  /* Ensure no color bleeding */
  .article-card,
  .resource-card {
    isolation: isolate;
  }
</style>

<script>
  // Simple, clean JavaScript for basic interactions
  document.addEventListener('DOMContentLoaded', () => {
    // Add loading states for images
    const images = document.querySelectorAll('.article-image img');
    images.forEach(img => {
      img.addEventListener('load', () => {
        img.style.opacity = '1';
      });
    });

    // Simple analytics tracking (if needed)
    const articleLinks = document.querySelectorAll('.article-title a');
    articleLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        // Track article clicks
        const title = link.textContent;
        console.log(`Article clicked: ${title}`);
      });
    });
  });
</script>