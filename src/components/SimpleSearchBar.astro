---
// Simple SearchBar component
---

<div class="search-container bg-white rounded-xl shadow-lg border border-gray-200 p-6 mb-6">
  <div class="relative">
    <input 
      type="text" 
      id="searchInput"
      placeholder="Search medical terms and definitions..."
      class="w-full px-4 py-3 pl-12 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
      autocomplete="off"
    />
    <div class="absolute left-4 top-1/2 transform -translate-y-1/2">
      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
    </div>
  </div>
  
  <div class="mt-4 flex flex-wrap gap-2">
    <span class="text-sm text-gray-600">Filter by difficulty:</span>
    <button class="difficulty-filter px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-700 transition-colors" data-difficulty="all">
      All
    </button>
    <button class="difficulty-filter px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700 transition-colors" data-difficulty="basic">
      Basic
    </button>
    <button class="difficulty-filter px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-700 transition-colors" data-difficulty="intermediate">
      Intermediate
    </button>
    <button class="difficulty-filter px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-700 transition-colors" data-difficulty="advanced">
      Advanced
    </button>
  </div>
</div>