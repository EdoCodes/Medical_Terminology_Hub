<script is:inline define:vars={{ terms, category }}>
  let currentIndex = 0;
  let studyTerms = [...terms];
  let sessionStats = { correct: 0, review: 0, total: 0 };

  function initializeStudyInterface() {
    updateDisplay();
  }

  function updateDisplay() {
    const container = document.getElementById('flashcardContainer');

    if (container && studyTerms.length > 0) {
      const term = studyTerms[currentIndex];
      container.innerHTML = `
        <div class="flashcard">
          <div class="flashcard-inner" id="flashcardInner">
            <div class="flashcard-front">
              <div class="flashcard-header">
                ${currentIndex + 1} / ${studyTerms.length}
              </div>
              <div class="flashcard-content">
                <h1 class="medical-term">${term.term}</h1>
                <div class="click-hint">Click to reveal definition</div>
              </div>
            </div>
            <div class="flashcard-back">
              <div class="flashcard-header">
                ${currentIndex + 1} / ${studyTerms.length}
              </div>
              <div class="flashcard-content">
                <p class="definition">${term.definition}</p>
                ${term.example ? `
                  <div class="example-section">
                    <h4 class="example-title">Example</h4>
                    <p class="example-text">${term.example}</p>
                  </div>
                ` : ''}
              </div>
            </div>
          </div>
        </div>
      `;

      setupFlashcard();
    }
    
    updateButtonStates();
  }

  function nextCard() {
    if (currentIndex < studyTerms.length - 1) {
      currentIndex++;
      updateDisplay();
    }
  }

  function previousCard() {
    if (currentIndex > 0) {
      currentIndex--;
      updateDisplay();
    }
  }

  function shuffleCards() {
    for (let i = studyTerms.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [studyTerms[i], studyTerms[j]] = [studyTerms[j], studyTerms[i]];
    }
    currentIndex = 0;
    updateDisplay();
  }

  function resetStudy() {
    currentIndex = 0;
    studyTerms = [...terms];
    updateDisplay();
  }



  function setupFlashcard() {
    const flashcard = document.querySelector('.flashcard');
    const flashcardInner = document.getElementById('flashcardInner');
    let isFlipped = false;

    if (flashcard && flashcardInner) {
      flashcard.addEventListener('click', () => {
        if (!isFlipped) {
          flashcardInner.classList.add('flipped');
          isFlipped = true;
        } else {
          flashcardInner.classList.remove('flipped');
          isFlipped = false;
        }
      });
    }

    // Navigation buttons
    const prevBtn = document.getElementById('prevCardBtn');
    const nextBtn = document.getElementById('nextCardBtn');
    const shuffleBtn = document.getElementById('shuffleBtn');

    if (prevBtn) {
      prevBtn.onclick = (e) => {
        e.stopPropagation();
        if (currentIndex > 0) {
          previousCard();
        }
      };
    }

    if (nextBtn) {
      nextBtn.onclick = (e) => {
        e.stopPropagation();
        if (currentIndex < studyTerms.length - 1) {
          nextCard();
        }
      };
    }

    if (shuffleBtn) {
      shuffleBtn.onclick = (e) => {
        e.stopPropagation();
        shuffleCards();
      };
    }
  }

  function updateButtonStates() {
    const prevBtn = document.getElementById('prevCardBtn');
    const nextBtn = document.getElementById('nextCardBtn');
    
    if (prevBtn) {
      prevBtn.disabled = currentIndex === 0;
    }
    if (nextBtn) {
      nextBtn.disabled = currentIndex === studyTerms.length - 1;
    }
  }


  document.addEventListener('DOMContentLoaded', initializeStudyInterface);
</script>