<style>
  @import url('https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;1,400&family=Source+Serif+Pro:wght@400;600&display=swap');

  .site-footer {
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
    color: #e2e8f0;
    font-family: 'Source Serif Pro', serif;
    position: relative;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Footer Main */
  .footer-main {
    padding: 60px 0 40px 0;
  }

  .footer-container > .footer-brand,
  .footer-container > .footer-section {
    display: block;
  }

  .footer-container {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 40px;
    align-items: start;
  }

  /* Brand Section */
  .footer-brand {
    max-width: 400px;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 24px;
  }

  .logo-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
  }

  .logo-svg {
    width: 28px;
    height: 28px;
  }

  .logo-title {
    font-family: 'Crimson Text', serif;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
    color: white;
  }

  .logo-subtitle {
    font-size: 0.9rem;
    color: #94a3b8;
    margin: 0;
    font-weight: 500;
  }

  .footer-description {
    color: #cbd5e1;
    line-height: 1.6;
    margin-bottom: 32px;
    font-size: 0.95rem;
  }

  .footer-stats {
    display: flex;
    gap: 32px;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-family: 'Crimson Text', serif;
    font-size: 1.8rem;
    font-weight: bold;
    color: #667eea;
    margin-bottom: 4px;
  }

  .stat-label {
    font-size: 0.85rem;
    color: #94a3b8;
    font-weight: 500;
  }

  /* Footer Sections */
  .footer-section {
    display: flex;
    flex-direction: column;
  }

  .footer-title {
    font-family: 'Crimson Text', serif;
    font-size: 1.2rem;
    font-weight: 600;
    color: white;
    margin: 0 0 24px 0;
    position: relative;
    padding-bottom: 8px;
  }

  .footer-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 40px;
    height: 2px;
    background: linear-gradient(90deg, #667eea, #764ba2);
    border-radius: 1px;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-link {
    color: #cbd5e1;
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    display: flex;
